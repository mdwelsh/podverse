{
  "compilerOptions": {
    "target": "ES2020", // Node.js 14
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "module": "node16",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "jsxImportSource": "ai-jsx",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
